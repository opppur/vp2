	<form method="POST">
	  <label for="firstNameInput">Sisesta eesnimi: </label>
	  <input type="text" id="firstNameInput" name="firstNameInput" placeholder="Eesnimi ...">
	  <br>
	  <label for="lastNameInput">Sisesta perekonnanimi: </label>
	  <input type="text" id="lastNameInput" name="lastNameInput" placeholder="Perekonnanimi ...">
	  <br>
	  <label for="birthDateInput">Sisesta sünnikuupäev: </label>
	  <input type="date" id="birthDateInput" name="birthDateInput">
	  <br>
	  <input type="radio" id="genderInput1" name="genderInput" value="1" checked>
	  <label for="genderInput1">Mees</label>
	  <input type="radio" id="genderInput2" name="genderInput" value="2">
	  <label for="genderInput2">Naine</label>
	  <br>
	  <label for="emailInput">E-mail (kasutajatunnuseks)</label>
	  <input type="email" id="emailInput" name="emailInput" placeholder="Sinu E-mail...">
	  <br>
	  <label for="passwordInput">Salasõna (min 8 märki)</label>
	  <input type="password" id="passwordInput" name="passwordInput">
	  <br>
	  <label for="confirmPasswordInput">Korda salasõna</label>
	  <input type="password" id="confirmPasswordInput" name="confirmPasswordInput">
	  <input type="submit" id="userSubmit" name="userSubmit" value="Loo kasutajakonto">
	 </form>
	 <p> <%= locals.notice || "Ootel" %></p>
